{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>akollade/renovate-config:default"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "composer"
            ],
            "separateMinorPatch": false
        },
        {
            "matchManagers": [
                "composer"
            ],
            "groupName": "Filament",
            "matchPackageNames": [
                "/^filament//"
            ]
        }
    ]
}
