{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>akollade/renovate-config:default"
    ],
    "packageRules": [
        {
            "matchDatasources": ["packagist"],
            "separateMinorPatch": false
        },
        {
            "matchDatasources": ["packagist"],
            "matchPackagePatterns": ["^filament/"],
            "groupName": "Filament"
        }
    ]
}
