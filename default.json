{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":separatePatchReleases",
        ":label(renovate)",
        "helpers:pinGitHubActionDigests",
        ":enableVulnerabilityAlertsWithLabel(security)",
        "github>akollade/renovate-config:drupal-project",
        "github>akollade/renovate-config:drupal-modules-releases-to-automerge"
    ],
    "timezone": "Europe/Paris",
    "rangeStrategy": "update-lockfile",
    "commitMessagePrefix": ":arrow_up:",
    "commitBodyTable": true,
    "prConcurrentLimit": 1,
    "suppressNotifications": ["prIgnoreNotification", "prEditedNotification"],
    "ignorePlugins": false,
    "platformAutomerge": true,
    "packageRules": [
        {
            "datasources": ["npm"],
            "matchDepTypes": ["devDependencies"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "schedule": [
                "every weekend"
            ]
        },
        {
            "datasources": ["packagist"],
            "matchDepTypes": ["require-dev"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "automergeType": "branch",
            "schedule": [
                "every weekend"
            ]
        }
    ]
}
