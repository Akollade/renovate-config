{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "configMigration": true,
    "extends": [
        "config:recommended",
        "docker:pinDigests",
        "helpers:pinGitHubActionDigests",
        ":ignoreModulesAndTests",
        ":separateMultipleMajorReleases",
        ":label(renovate)",
        ":enableVulnerabilityAlertsWithLabel(security)",
        "github>akollade/renovate-config:_github-actions"
    ],
    "timezone": "Europe/Paris",
    "schedule": ["before 8:00am every weekday"],
    "updateNotScheduled": false,
    "rangeStrategy": "bump",
    "commitMessagePrefix": ":arrow_up:",
    "commitBodyTable": true,
    "prConcurrentLimit": 1,
    "suppressNotifications": ["prIgnoreNotification", "prEditedNotification"],
    "ignorePlugins": false,
    "platformAutomerge": true,
    "dependencyDashboardLabels": ["renovate"],
    "packageRules": [
        {"matchDepNames": ["php"], "enabled": false},
        {
            "matchManagers": ["npm"],
            "matchDepTypes": ["dependencies"],
            "schedule": ["before 8:00am every weekday on the first week of the month"]
        },
        {
            "matchManagers": ["npm"],
            "matchDepTypes": ["devDependencies"],
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true,
            "prPriority": 10,
            "schedule": [
                "before 8:00am every weekday on the 24th through 30th day of the month"
            ]
        },
        {
            "matchManagers": ["composer"],
            "matchDepTypes": ["require-dev"],
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true,
            "prPriority": 10,
            "schedule": [
                "before 8:00am every weekday on the 24th through 30th day of the month"
            ]
        },
        {
            "matchDatasources": ["docker"],
            "schedule": [
                "before 8:00am every weekday on the 24th through 30th day of the month"
            ]
        },
        {
            "description": "Unstable versions needs approval",
            "matchManagers": ["composer"],
            "matchCurrentVersion": "/.*(beta|alpha|rc).*/i",
            "dependencyDashboardApproval": true
        },
        {
            "groupName": "twig packages",
            "groupSlug": "twig",
            "matchManagers": ["composer"],
            "matchPackagePrefixes": [
                "twig/"
            ]
        },
        {
            "groupName": "PHPStan packages",
            "matchManagers": ["composer"],
            "matchPackagePatterns": [
                "^phpstan/phpstan$",
                "^phpstan/extension-installer$",
                "/phpstan-",
                "/larastan"
            ]
        },
        {
            "description": "Symfony major versions needs approval",
            "matchManagers": ["composer"],
            "matchUpdateTypes": ["major"],
            "dependencyDashboardApproval": true,
            "matchPackagePrefixes": ["symfony/"]
        },
        {
            "description": "Bootstrap major and minor versions needs approval",
            "matchManagers": ["npm"],
            "matchUpdateTypes": ["major", "minor"],
            "matchPackageNames": ["bootstrap"],
            "dependencyDashboardApproval": true
        },
        {
            "description": "Automerge Bootstrap patches",
            "matchManagers": ["npm"],
            "matchUpdateTypes": ["patch"],
            "matchPackageNames": ["bootstrap"],
            "automerge": true
        },
        {
            "matchManagers": ["composer"],
            "matchUpdateTypes": ["patch", "minor"],
            "matchPackageNames": [
                "composer/installers",
                "giggsey/libphonenumber-for-php",
                "doctrine/migrations",
                "stof/doctrine-extensions-bundle"
            ],
            "automerge": true
        }
    ]
}
