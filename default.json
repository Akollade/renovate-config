{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":separatePatchReleases",
        ":label(renovate)",
        "helpers:pinGitHubActionDigests",
        ":enableVulnerabilityAlertsWithLabel(security)"
    ],
    "timezone": "Europe/Paris",
    "schedule": [
        "before 8am every weekday"
    ],
    "updateNotScheduled": false,
    "rangeStrategy": "update-lockfile",
    "commitMessagePrefix": ":arrow_up:",
    "commitBodyTable": true,
    "prConcurrentLimit": 1,
    "suppressNotifications": ["prIgnoreNotification", "prEditedNotification"],
    "ignorePlugins": false,
    "platformAutomerge": true,
    "dependencyDashboardLabels": ["renovate"],
    "packageRules": [
        {
            "matchManagers": ["github-actions"],
            "packageNames": [
                "mariadb"
            ],
            "enabled": false
        },
        {
            "matchManagers": ["github-actions"],
            "prPriority": -10,
            "schedule": ["before 8am on monday and friday"],
            "groupName": "Github Actions"
        },
        {
            "matchManagers": ["github-actions"],
            "packageNames": [
                "actions/checkout",
                "actions/cache",
                "actions/setup-node",
                "tj-actions/changed-files"
            ],
            "matchUpdateTypes": ["minor", "patch", "digest"],
            "automerge": true,
            "prPriority": 10,
            "groupName": "Github Actions Automerge"
        },
        {
            "datasources": ["npm"],
            "matchDepTypes": ["devDependencies"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "prPriority": 10
        },
        {
            "datasources": ["packagist"],
            "matchDepTypes": ["require-dev"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "prPriority": 10
        },
        {
          "groupName": "PHPStan packages",
          "matchDatasources": [
            "packagist"
          ],
          "matchPackagePatterns": [
            "^phpstan/phpstan$",
            "/phpstan-",
            "/larastan"
          ],
          "schedule": [
            "before 8am on monday and friday"
          ]
        },
        {
            "packageNames": ["drush/drush"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "groupName": "Drush",
            "prPriority": 10
        },
        {
            "matchPackagePatterns": ["^drupal/commerce"],
            "updateTypes": [
                "patch",
                "minor"
            ],
            "groupName": "Drupal Commerce modules"
        },
        {
            "matchPackagePatterns": ["^drupal/"],
            "excludePackagePatterns": [
                "^drupal/core",
                "^drupal/commerce"
            ],
            "updateTypes": [
                "patch",
                "minor"
            ],
            "groupName": "Drupal modules"
        },
        {
            "packageNames": [
                "drupal/webform",
                "drupal/simple_sitemap"
            ],
            "updateTypes": ["patch"],
            "automerge": true,
            "groupName": "Drupal modules"
        },
        {
            "datasources": ["packagist"],
            "updateTypes": ["patch"],
            "matchPackagePatterns": ["^drupal/core"],
            "groupName": "Drupal Core",
            "automerge": true
        },
        {
            "datasources": ["packagist"],
            "updateTypes": ["minor"],
            "matchPackagePatterns": ["^drupal/core"],
            "groupName": "Drupal Core"
        },
        {
            "datasources": ["packagist"],
            "updateTypes": ["major"],
            "matchPackagePatterns": ["^drupal/core"],
            "enabled": false
        },
        {
          "groupName": "twig packages",
          "groupSlug": "twig",
          "matchPackagePrefixes": [
            "twig/"
          ]
        },
        {
            "datasources": ["packagist"],
            "updateTypes": ["major"],
            "matchPackagePrefixes": ["symfony/"]
            "enabled": false
        },
    ]
}
