{
    "extends": [
        "config:base",
        ":separatePatchReleases",
        ":label(renovate)"
    ],
    "timezone": "Europe/Paris",
    "rangeStrategy": "update-lockfile",
    "commitMessagePrefix": ":arrow_up:",
    "commitBodyTable": true,
    "prConcurrentLimit": 1,
    "suppressNotifications": ["prIgnoreNotification", "prEditedNotification"],
    "ignorePlugins": false,
    "platformAutomerge": true,
    "packageRules": [
        {
            "matchPackagePatterns": ["^drupal/"],
            "minimumReleaseAge": 2,
            "internalChecksFilter": "strict"
        },
        {
            "datasources": [
                "packagist"
            ],
            "updateTypes": [
                "patch",
                "minor"
            ],
            "packageNames": [
                "drupal/core-dev-pinned",
                "drupal/core-recommended",
                "drupal/core-composer-scaffold",
                "drupal/core-project-message",
                "drupal/core-vendor-hardening"
            ],
            "groupName": "Drupal Core"
        },
        {
            "datasources": [
                "packagist"
            ],
            "updateTypes": [
                "major"
            ],
            "packageNames": [
                "drupal/core-dev-pinned",
                "drupal/core-recommended",
                "drupal/core-composer-scaffold",
                "drupal/core-project-message",
                "drupal/core-vendor-hardening"
            ],
            "enabled": false
        },
        {
            "datasources": [
                "packagist"
            ],
            "groupName": "twig packages",
            "groupSlug": "twig",
            "packagePatterns": [
                "^twig/"
            ]
        },
        {
            "groupName": "eslint",
            "packagePatterns": [
                "eslint"
            ]
        },
        {
            "groupName": "bazinga-js-translator packages",
            "groupSlug": "bazinga-js-translator",
            "packageNames": [
                "willdurand/js-translation-bundle",
                "bazinga-translator"
            ]
        },
        {
            "packageNames": [
                "pre-commit",
                "pre-commit/pre-commit-hooks",
                "adrienverge/yamllint"
            ],
            "minor": {
                "automerge": true,
                "automergeType": "branch"
            }
        },
        {
            "groupName": "phpstan packages",
            "groupSlug": "phpstan",
            "packagePatterns": [
                "^phpstan/",
                "jangregor/phpstan-prophecy",
                "mglaman/phpstan-drupal"
            ],
            "automerge": true,
            "automergeType": "branch",
            "schedule": [
                "every weekend"
            ]
        },
        {
            "packageNames": [
                "sass",
                "sass/dart-sass",
                "core-js",
                "webpack-notifier"
            ],
            "patch": {
                "automerge": true,
                "automergeType": "branch"
            },
            "schedule": [
                "every weekend"
            ]
        },
        {
            "packageNames": [
                "drush/drush"
            ],
            "minor": {
                "automerge": true
            }
        }
    ]
}
