{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "configMigration": true,
    "extends": [
        "config:recommended",
        "docker:pinDigests",
        "helpers:pinGitHubActionDigests",
        ":ignoreModulesAndTests",
        ":separateMultipleMajorReleases",
        ":label(renovate)",
        ":enableVulnerabilityAlertsWithLabel(security)",
        "github>akollade/renovate-config:_github-actions"
    ],
    "timezone": "Europe/Paris",
    "schedule": [
        "before 8am every weekday"
    ],
    "updateNotScheduled": false,
    "rangeStrategy": "bump",
    "commitMessagePrefix": ":arrow_up:",
    "commitBodyTable": true,
    "prConcurrentLimit": 1,
    "suppressNotifications": ["prIgnoreNotification", "prEditedNotification"],
    "ignorePlugins": false,
    "platformAutomerge": true,
    "dependencyDashboardLabels": ["renovate"],
    "packageRules": [
        {
            "matchPackageNames": [
                "php"
            ],
            "enabled": false
        },
        {
            "datasources": ["npm"],
            "matchDepTypes": ["dependencies"],
            "schedule": [
              "before 8am on the first week of the month"
            ]
        },
        {
            "datasources": ["npm"],
            "matchDepTypes": ["devDependencies"],
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true,
            "prPriority": 10,
            "schedule": [
              "before 8am on the last week of the month"
            ]
        },
        {
            "datasources": ["packagist"],
            "matchDepTypes": ["require-dev"],
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true,
            "prPriority": 10,
            "schedule": [
                "before 8am on the last week of the month"
            ]
        },
        {
          "groupName": "twig packages",
          "groupSlug": "twig",
          "matchPackagePrefixes": [
            "twig/"
          ]
        },
        {
            "datasources": ["packagist"],
            "updateTypes": ["major"],
            "matchPackagePrefixes": ["symfony/"],
            "dependencyDashboardApproval": true
        }
    ]
}
