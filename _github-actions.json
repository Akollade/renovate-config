{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchManagers": ["github-actions"],
            "packageNames": [
                "mariadb"
            ],
            "enabled": false
        },
        {
            "groupName": "GitHub Actions",
            "matchManagers": ["github-actions"],
            "prPriority": -10,
            "schedule": [
                "before 8:00am every weekday on the first week of the month"
            ],
            "automerge": true
        }
    ]
}
